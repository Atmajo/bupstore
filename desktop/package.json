{
  "name": "bupstore-desktop",
  "version": "1.0.0",
  "description": "BupStore Desktop - Secure Backup Code Manager",
  "main": "dist-electron/main.js",
  "type": "module",
  "homepage": "https://github.com/atmajo/bupstore",
  "author": {
    "name": "Atmajo",
    "email": "atmajoc@gmail.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:preload": "node build-preload.js",
    "electron:dev": "node build-preload.js && vite",
    "electron:build": "node build-preload.js && vite build && electron-builder",
    "electron:build:win": "node build-preload.js && vite build && electron-builder --win",
    "electron:build:linux": "node build-preload.js && vite build && electron-builder --linux",
    "electron:build:mac": "node build-preload.js && vite build && electron-builder --mac"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bupstore.desktop",
    "productName": "BupStore",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "maintainer": "Atmajo <atmajoc@gmail.com>"
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  }
}
